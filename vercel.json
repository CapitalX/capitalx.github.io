{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/chat-handler.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat-handler",
      "dest": "/api/chat-handler.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "github": {
    "silent": false
  }
}
